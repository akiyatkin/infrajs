{
	"tpl":"*cart/catalog.tpl",
	"tplroot":"groups",
	"json":"*cart/catalog.php?type=rubrics",
	"autoedittpl":{ "fast":"{infra.conf.catalog.dir}"},
	"divs":{
		"filters":{
			"env":"filters",
			"global":"cat_filters",
			"autosavename":"filters",
			"tpl":"*cart/filters.tpl",
			"jsontpl":"*cart/filters.php?search={state.child.name}"
		}
	},
	"child":[{
		"tpl":"*cart/search.tpl",
		"global":"cat_search",
		"jsontpl":"*cart/search.php?val={state.name}&page={~match(:exp,state.child.name)[:1]}{exp:}^p(\\d+)$",
		"autoedittpl":{ "fast":"{infra.conf.catalog.dir}" },
		"myenv":{
			"filters":true
		},
		"seotpl":{"link":"{istate.parent}/{{.}}"},
		"conf_prod":true,
		"parsedtpl":"{config.sel}",
		"configtpl":{
			"sel":"{config.sel|(state.name|)}"
		},
		"seo":{
			"name":"Группа каталога",
			"json":"*cart/search.php?val={.}",
			"tpl":["<h1>{title}</h1><p>{descr}</p>{text}"],
			"schema":{
				"type":"string"
			},
			"items":[{	
				"data":"Каталог"
			},{	
				"data":"Новинки"
			}],
			//массив items, все данные с дефолтными значениями всего благодаря чему можно получить уникальный контент.php
			"defitems":"*cart/catalog.php?type=seo&val=search"
		}
	},{
		"child":{
			"tpl":"*cart/catalog.tpl",
			"tplroot":"pos",
			"istpl":"{~test(:exp,state.name)??:1}{exp:}^p\\d+$",
			"autoedittpl":{ "fast":"*Каталог/{state.parent.name}/{state.name}/" },
			"jsontpl":"*cart/catalog.php?type=pos&val={state.parent.name}&art={state.name}",
			"seotpl":{"link":"{istate.parent.parent}/{{producer}}/{{article}}"},
			"seo":{
				"name":"Позиция каталога",
				"json":"*cart/catalog.php?type=pos&val={producer}&art={article}",
				"tpl":["<h1>{pos.Производитель} {pos.Артикул}</h1>{pos.texts::t}{t:}{.}"],
				"schema":{
					"type":"object",
					"properties":{
						"producer":{
							"title":"Производитель",
							"type":"string",
							"required":true
						},
						"article":{
							"title":"Артикул",
							"type":"string",
							"required":true
						}
					}
					
				},
				"defitems":"*cart/catalog.php?type=seo&val=pos"
			}
		}
	}],
	
	"childs":{
		"Корзина":{
			"tpl":"*cart/client.tpl",
			"autosavename":"user",
			"json":"*cart/client.php",
			"onsubmit":true,
			"divs":{
				"cart":{
					"sub":true,
					"json":"*cart/client.php",
					"global":"cat_basket",
					"autosavename":"basket"
				}
			}
		},
		"Поиск":{
			"tpl":"*cart/catalog.tpl",
			"tplroot":"find",
			"autosavename":"search",
			"myenv":{
				"cat_search":false
			}
		},
		"Производители":{
			"tpl":"*cart/catalog.tpl",
			"tplroot":"producers",
			"json":"*cart/catalog.php?type=producers",
			"autoedit":{ "fast":"*Тексты/Производители"},

			"seotpl":{
				"link":"{istate}",
				"json":"{json}"
			},
			"seo":{
				"name":"Все производители в каталоге",
				"defitems":"*cart/catalog.php?type=seo&val=producers",
				"tpl":["{text}"]
			}
		},
		"Статистика":{
			"tpl":"*cart/catalog.tpl",
			"tplroot":"stat",
			"json":"*cart/catalog.php?type=stat",
			"autoedit":{ "fast":"*Тексты/Статистика поиска по каталогу"},
			"seotpl":{
				"link":"{istate}",
				"json":"{json}"
			},
			"seo":{
				"name":"Статистика поиска по каталогу",
				"defitems":"*cart/catalog.php?type=seo&val=stat",
				"tpl":["{text}"]
			}
			
		}
	}
}