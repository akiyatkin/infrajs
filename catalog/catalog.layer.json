{
	"tpl":"*catalog/catalog.tpl",
	"tplroot":"groups",
	"json":"*catalog/catalog.php?type=rubrics",
	"autoedittpl":{ "fast":"{infra.conf.catalog.dir}"},
	"configtpl":{
		"root":"{crumb}"
	},
	"child":[{
		"tpl":"*catalog/catalog.tpl",
		"tplroot":"SEARCH",
		"jsontpl":"*catalog/catalog.php?type=search&val={crumb.name}&prod={config.sel}",
		"autoedittpl":{ "fast":"{infra.conf.catalog.dir}" },
		"conf_prod":true,
		"parsedtpl":"{config.sel}",
		"configtpl":{
			"root":"{crumb.parent}",
			"sel":"{config.sel|(crumb.name|)}"
		}
	},{
		"child":{
			"tpl":"*catalog/catalog.tpl",
			"tplroot":"pos",
			"autoedittpl":{ "fast":"*Каталог/{crumb.parent.name}/{crumb.name}/" },
			"jsontpl":"*catalog/catalog.php?type=pos&val={crumb.parent.name}&art={crumb.name}",
			"seotpl":{"link":"{crumb.parent.parent}/{{producer}}/{{article}}"},
			"seo":{
				"name":"Позиция каталога",
				"json":"*catalog/catalog.php?type=pos&val={producer}&art={article}",
				"tpl":["<h1>{pos.Производитель} {pos.Артикул}</h1>{pos.texts::t}{t:}{.}"],
				"schema":{
					"type":"object",
					"properties":{
						"producer":{
							"title":"Производитель",
							"type":"string",
							"required":true
						},
						"article":{
							"title":"Артикул",
							"type":"string",
							"required":true
						}
					}
					
				},
				"defitems":"*catalog/catalog.php?type=seo&val=pos"
			}
		}
	}],
	"childs":{
		"Поиск":{
			"tpl":"*catalog/catalog.tpl",
			"tplroot":"find",
			"autosavename":"search",
			"myenv":{
				"cat_search":false
			}
		},
		"Производители":{
			"tpl":"*catalog/catalog.tpl",
			"tplroot":"producers",
			"json":"*catalog/catalog.php?type=producers",
			"autoedit":{ "fast":"*Тексты/Производители"},

			"seotpl":{
				"link":"{crumb}",
				"json":"{json}"
			},
			"seo":{
				"name":"Все производители в каталоге",
				"defitems":"*catalog/catalog.php?type=seo&val=producers",
				"tpl":["{text}"]
			}
		},
		"Статистика":{
			"tpl":"*catalog/catalog.tpl",
			"tplroot":"stat",
			"json":"*catalog/catalog.php?type=stat",
			"autoedit":{ "fast":"*Тексты/Статистика поиска по каталогу"},
			"seotpl":{
				"link":"{crumb}",
				"json":"{json}"
			},
			"seo":{
				"name":"Статистика поиска по каталогу",
				"defitems":"*catalog/catalog.php?type=seo&val=stat",
				"tpl":["{text}"]
			}
			
		}
	}
}