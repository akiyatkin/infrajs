{
	"child":{
		"tpl":["<h1>{crumb.name}</h1><p>{infra.conf.rubrics.404}</p><p><a href='?'>{infra.conf.rubrics.link}</a></p>"],
		"tplroot":"root",
		"autoedittpl":{"fast":"*{infra.conf.rubrics.main}/{crumb.name}"},
		"showanimate":true,
		"layers":{
			"seojsontpl":"*{infra.conf.rubrics.main}/{crumb.name}.json",
			"tplcheck":true,
			"autoedittpl":{"fast":"*{infra.conf.rubrics.main}/{crumb.name}"},
			"tpltpl":"*rubrics/rubrics.php?type={infra.conf.rubrics.main}&id={crumb.name}&show"
		}
	},
	"childs":{
		"info":{
			"seojsontpl":"*{crumb.name}/{crumb.name}.json",
			"tpl":["<div id='rubricstitle'></div><div id='rubricscontent'></div>"],
			"tplroot":"root",
			"autoedittpl":{"fast":"*{crumb.name}/"},
			"divs":{
				"rubricstitle":{
					"tpl":["<h1>{infra.conf.rubrics.list[crumb.name].title}</h1>"],
					"tplroot":"root"
				},
				"rubricscontent":{
					"jsontpl":"*rubrics/rubrics.php?type={crumb.name}&list&lim=0,50",
					"tpl":"*rubrics/rubrics.tpl",
					"tplroot":"PAGES",
					"child":{
						"showanimate":true,
						"tpltpl":"*rubrics/rubrics.php?type={crumb.parent.name}&show&id={crumb.name}",
						"autoedittpl":{ "fast":"*{crumb.parent.name}/{crumb.name}" },
						"divs":{
							"rubricstitle":{
								"tpl":[""]
							}
						}
					}
				}
			}
		},
		"files":{
			"seojsontpl":"*seo/{crumb.name}.json",
			"tpl":["<div id='rubricstitle'></div><div id='rubricscontent'></div>"],
			"tplroot":"root",
			"autoedittpl":{"fast":"*{crumb.name}/"},
			"divs":{
				"rubricstitle":{
					"tpl":["<h1>{infra.conf.rubrics.list[crumb.name].title}</h1>"],
					"tplroot":"root"
				},
				"rubricscontent":{
					"jsontpl":"*rubrics/rubrics.php?type={crumb.name}&list&lim=0,50",
					"tpl":"*rubrics/rubrics.tpl",
					"tplroot":"FILES"
				}
			}
		},
		"list":{
			"tpl":["<div id='rubricstitle'></div><div id='rubricscontent'></div>"],

			"autoedittpl":{"fast":"*{crumb.name}/"},
			"divs":{
				"rubricstitle":{
					"tpl":["<h1>{infra.conf.rubrics.list[crumb.name].title}</h1>"],
					"tplroot":"root"
				},
				"rubricscontent":{
					"tpl":"*rubrics/rubrics.tpl",
					"tplroot":"PAGES",
					"jsontpl":"*rubrics/rubrics.php?type={crumb.name}&list&lim=0,50",
					"child":{
						"showanimate":true,
						"tpltpl":"*rubrics/rubrics.php?type={crumb.parent.name}&show&id={crumb.name}",
						"autoedittpl":{ "fast":"*{crumb.parent.name}/{crumb.name}" },
						"divs":{
							"rubricstitle":{
								"tpl":["<a href='?{crumb.parent.name}'>{infra.conf.rubrics.list[crumb.parent.name].title}</a>"],
								"tplroot":"root"
							}
						}
					}
				}
			}
		}
	}
}
